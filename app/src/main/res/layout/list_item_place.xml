<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector"
    android:paddingBottom="@dimen/list_item_place_bottom_padding">

    <ImageView
        android:id="@+id/list_item_place_img"
        android:layout_width="@dimen/list_item_place_img_width"
        android:layout_height="@dimen/list_item_place_img_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/list_item_place_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/list_item_place_img"
        android:padding="@dimen/list_item_place_title_padding"
        android:text="TextView, esto es una prueba" />

    <TextView
        android:id="@+id/list_item_place_tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_item_place_img"
        android:layout_below="@+id/list_item_place_tv_title"
        android:layout_toEndOf="@+id/list_item_place_img"
        android:padding="@dimen/list_item_place_title_padding"
        android:text="Uribarri"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>